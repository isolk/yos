{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "quick_start",
            "type": "shell",
            "command": "./quick_debug.sh",
            "isBackground": true,
            "problemMatcher": {
                "owner": "mocha",
                "fileLocation": "relative",
                "pattern": [
                    {
                        "regexp": "^not\\sok\\s\\d+\\s(.*)$"
                    },
                    {
                        "regexp": "\\s+(.*)$",
                        "message": 1
                    },
                    {
                        "regexp": "\\s+at\\s(.*):(\\d+):(\\d+)$",
                        "file": 1,
                        "line": 2,
                        "column": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "mocha*"
                    },
                    "endsPattern": {
                        "regexp": "^ok"
                    }
                },
            }
        },
        {
            "label": "quick_start2",
            "type": "shell",
            // "options": {
            //     "cwd": "${workspaceRoot}/"
            // },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "revealProblems": "onProblem"
            },
            "command": "./quick_debug.sh",
        }
    ]
}