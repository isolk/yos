{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
                "label": "quick_start",
                "type":"shell",
                "command": "./quick_debug.sh",
                "isBackground": true,
        },
        {
            "label": "start",
            "type":"shell",
            "command": "qemu-system-i386 -no-reboot -no-shutdown -s -S -drive file=kernel/bin/disk.img,format=raw,index=0,media=disk",
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn":["rebuild"]
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command":"./build.sh",
            "group": "build",
            "isBackground": true
        }
    ]
}